<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/json_view_primary_item_height"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <io.liuxiangdong.jsonview.IndentationView
        android:id="@+id/json_view_indentation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/json_view_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|right|end"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/json_view_key_color"
        android:textIsSelectable="true"
        android:textSize="@dimen/json_view_primary_text_size"
        android:textStyle="bold"
        tools:text="key" />

    <ImageView
        android:id="@+id/json_view_collapse"
        android:layout_width="@dimen/json_view_primary_item_height"
        android:layout_height="@dimen/json_view_primary_item_height"
        android:padding="@dimen/json_view_primary_icon_padding"
        android:src="@drawable/json_view_collapse" />

    <ImageView
        android:id="@+id/json_view_copy"
        android:layout_width="@dimen/json_view_primary_item_height"
        android:layout_height="@dimen/json_view_primary_item_height"
        android:padding="@dimen/json_view_primary_icon_padding"
        android:src="@drawable/json_view_copy" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|right|end"
        android:text="@string/json_view_opening_brace"
        android:textColor="@color/json_view_key_color"
        android:textIsSelectable="true"
        android:textSize="@dimen/json_view_primary_text_size"
        android:textStyle="bold" />
</LinearLayout>